<html>
<head>
<script language="Javascript">
function Ausgabe(eingabe)
{
 var eingabe, eingabe2="Hier Name ist:\n";
 eingabe2=eingabe2+eingabe;
 alert(eingabe2);
}
function Name()
{
 var eingabe;
 eingabe=prompt("Bitte geben sie ihren Namen ein.");
 return(eingabe);
}
function Richtig(eingabe)
{
 var eingabe, T,eingabe2="Hier Name ist:\n";
 eingabe2=eingabe2+eingabe+"\nIst hier Name Richtig?";
 T=confirm(eingabe2);
 return(T);
}
function main()
{
 var Namevar, T;
 while(true)
 {
  Namevar=Name();
  T=Richtig(Namevar);
  if(T==true)
  {
   Ausgabe(Namevar);
   break;
  }
 }
}
</script>
</head>
<body onload="main()">
</body>
</html>
