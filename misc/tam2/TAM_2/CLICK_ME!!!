echo "Vediamo un pò cosa c'è qui..."
echo "Tranquillo...controllo solo se ci sono alcune cosucce..."
echo "...e se non ci sono le copio di brutto brutto!!!"
assign tam2: ""
if not exists SYS:classes/codec.class
copy tam2:data/codec.class SYS:classes
endif
if exists SYS:classes/codecs
if not exists SYS:classes/codecs/jpeg.codec
copy tam2:data/codecs/jpeg.codec SYS:classes/codecs
endif
if not exists SYS:classes/codecs/picture.codec
copy tam2:data/codecs/picture.codec SYS:classes/codecs
endif
endif
if not exists SYS:classes/codecs
makedir SYS:classes/Codecs
copy tam2:data/codecs/#? SYS:classes/codecs
endif
if not exists libs:tower.library
copy tam2:data/tower.library libs:
endif
echo "Operazione completata con successo...ora puoi entrare anche tu"
echo "nell'universo di T.A.M. NUMERO 2!!!"
wait 5
