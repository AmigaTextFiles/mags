 1       Out 1{p}
 2       In 1 -{p}
 3       In 1 +{p}
 4       +ve{p}
 5       In 2 +{p}
 6       In 2 -{p}
 7       Out 2{p}
 8       Out 3{p}
 9       In 3 -{p}
10       In 3 +{p}
11       -ve{p}
12       In 4 +{p}
13       In 4 -{p}
14       Out 1
{p} {p}
