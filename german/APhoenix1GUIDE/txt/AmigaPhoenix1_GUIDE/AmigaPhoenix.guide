@node "editorial" "AMIGA PHÖNIX - Editorial"

 @{fg shine}Editorial@{fg text}  @{"Aufruf" link "aufruf" 0}         @{"Dank an..." link "dankan" 0}      @{"Hardware" link "hardware" 0}

