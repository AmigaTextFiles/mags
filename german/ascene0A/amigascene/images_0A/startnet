.key IPADDRESS
.bra {
.ket }
.def IPADDRESS 192.168.1.1

; log in
echo
echo login:
; specify username as last argument in next line to login automatically!
AmiTCP:bin/login >NIL: -f
AmiTCP:bin/umask 022
run <>NIL: AmiTCP:AmiTCP >NIL:
WaitForPort AMITCP
; Configure loop-back device
AmiTCP:bin/ifconfig lo0 localhost
; Configure ariadne
AmiTCP:bin/ifconfig ariadne {IPADDRESS} 192.168.1.255
; Add route to the default gateway
AmiTCP:bin/route >NIL: add default 192.168.1.100
setenv HOSTNAME `AmiTCP:bin/hostname`
Assign TCP: Exists > NIL:
IF Warn
  Mount TCP: from AmiTCP:devs/Inet-Mountlist
EndIf

; Start Portmapper
Run <>NIL: AmiTCP:bin/portmap

; Start the internet `super server'
run <>NIL: AmiTCP:bin/inetd <>NIL:
