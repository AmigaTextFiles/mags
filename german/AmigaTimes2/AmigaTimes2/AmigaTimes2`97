@endnode


@node list3 " Listings 3 "
@tco main
@{lindent 1}


;Beschreibung: Eine sich bewegender Balken.

;Autor       : Enrico Bauermeister

;Datum       : 13.10.1997

;Assembler   : TFA AsmOne v1.29

;==========================================


; graphics.library öffnen

;------------------------

 lea      gfxname(pc),a1       ;Name der Library

 moveq    #0,d0                ;Version der Library

 move.l   4.w,a6               ;Basisadresse der exec.library

 jsr      -552(a6)             ;OpenLibrary()

 tst.l    d0                   ;Lib geöffnet ?

 beq      ende                 ;nein -> ende

 lea      _GfxBase(pc),a0      ;Basisadresse der graphics.library

 move.l   d0,(a0)              ;in _GfxBase sichern



; Interrupts verbieten (Mulitasking abschalten)

;-----------------------------------------------

 jsr      -120(a6)             ;Disable() - Wir schalten hier das

                               ;Multitasking ab. Unser Programm hat

                               ;nun den ganzen Amiga für sich alleine.



; alte Copperliste speichern

;---------------------------

 move.l   _GfxBase(pc),a6

 move.l   $26(a6),OldCop       ;Auf Adresse $26 zur Basisadresse

                               ;der graphics.library liegt die Adresse

                               ;der aktuellen Copperliste.



; unsere eigende Copperliste starten

;------------------------------------

 move.l   #Copperliste,$dff080 ;Im Register COP1LC steht nun die Adresse

                               ;unserer Copperliste.

 move.w   d0,$dff088           ;Wir starten unsere Copperliste indem wir

                               ;irgendeinen Wert ins Register COPJMP1

                               ;reinschreiben, z.B. D0.


; pruefen ob wir schon an Zeile 255 angekommen sind

;---------------------------------------------------

Pruefe:   

 cmpi.b   #$ff,$dff006         ;cmpi - compare immediate -

                               ;Inhahlt von Register VHPOSR ($dff006)

                               ;mit der Konstante $ff (255) vergleichen.

 bne.s    Pruefe               ;Vergleich nicht wahr -> Pruefe



; wenn ja

;---------

 bsr.s    BewegeCopper         ;bsr - branch to subroutine -

                               ;Rountine BewegeCopper ausführen (jede

                               ;1/50 Sekunde)

                     

; pruefen on wir noch auf Zeile 255 sind, und auf Zeile 0 warten

;----------------------------------------------------------------

Warte:

 cmpi.b   #$ff,$dff006         ;255 in VHPOSR ?

 beq.s    Warte                ;nein -> Warte



; linke Maustaste gedrueckt ?

;-----------------------------

 btst     #6,$bfe001           ;btst - test bit -

                               ;Testen ob Bit 6 im Register PRA ($bfe001)

                               ;gesetzt (also 1) ist.
 bne.s    Pruefe               ;nein -> Pruefe


; alte COPPERLIST wieder starten

;--------------------------------

 move.l  OldCop(pc),$dff080    ;In Register COP1LC steht nun wieder die

                               ;Adresse der alten Copperliste

 move.w  d0,$dff088            ;In COPJMP1 irgendeinen Wert -> alte

                               ;Copperliste starten


 move.l  4.w,a6                ;Basisadresse der exec.library

 jsr     -126(a6)              ;Enable() - So, nun können wieder mehrere

                               ;Programme den Amigs nutzen.



; Interrupts wieder zulassen (Multitasking einschalten)

;------------------------------------------------------

 move.l  4.w,a6                ;Basisadresse der exec.library

 jsr     -126(a6)              ;Enable() - So, nun können wieder mehrere

                               ;Programme den Amigs nutzen.



; graphics.library wieder schliessen

;------------------------------------

 move.l   _GfxBase(pc),a1      ;Basisadresse der graphics.library

 jsr      -414(a6)             ;CloseLibrary()


; Programm verlassen

;--------------------

ende

 moveq    #0,d0                ;Rückgabewert des Programmes

 rts                           ;und tschüß ...


; Datenbereich

;--------------

gfxname:  dc.b  'graphics.library',0

          cnop  0,2

_GfxBase: dc.l  0

OldCop:   dc.l  0  

Richtung: dc.b  0,0            ;Hier speichern wir ob sich der Balken

                               ;nach oben oder untern bewegen muß.



; Nun unseren Farbbalken bewegen

;--------------------------------

BewegeCopper:

 lea      Wait_o,a0            ;effektive Adresse von Wait_o nach A0 laden

 tst.b    Richtung             ;Richtung == 0 ?

 beq.w    BalkenRunter         ;wenn ja -> BalkenRunter

 cmpi.b   #$2C,(a0)            ;Ist das obere Ende des Balkens schon an

                               ;Zeile 44 ?

 beq.s    SetzeRichtungRunter  ;wenn ja -> SetzeRichtungRunter

 subq.b   #2,(a0)              ;2 vom ersten WAIT abziehen -> der Balken

                               ;steigt

 subq.b   #2,8(a0)             ;2. Wait - 8 zu der Adresse des ersten WAITs

                               ;          addieren und schon haben wir das

                               ;          zweite (8 Byte weiter als das

                               ;          erste)

 subq.b   #2,8*2(a0)           ;3. Wait

 subq.b   #2,8*3(a0)           ;4. Wait

 subq.b   #2,8*4(a0)           ;5. Wait

 subq.b   #2,8*5(a0)           ;6. Wait

 subq.b   #2,8*6(a0)           ;7. Wait

 subq.b   #2,8*7(a0)           ;8. Wait

 subq.b   #2,8*8(a0)           ;9. Wait

 subq.b   #2,8*9(a0)           ;10. Wait

 rts



SetzeRichtungRunter:

 clr.b    Richtung             ;"Richtung" auf 0 setzen

 rts



BalkenRunter:


 lea      Wait_u,a0            ;effektive Adresse von Wait_u nach A0 laden


 cmpi.b   #$E6,(a0)            ;Ist das untere Ende des Balkens schon an

                               ;Zeile 230 ?

 beq.s    SetzeRichtungRauf    ;wenn ja -> SetzeRichtungRauf

 lea      Wait_o,a0            ;effektive Adresse von Wait_o nach A0 laden

 addq.b   #2,(a0)              ;2 zum ersten WAIT addieren -> der Balken

                               ;sinkt

 addq.b   #2,8(a0)             ;2. Wait

 addq.b   #2,8*2(a0)           ;3. Wait

 addq.b   #2,8*3(a0)           ;4. Wait

 addq.b   #2,8*4(a0)           ;5. Wait

 addq.b   #2,8*5(a0)           ;6. Wait

 addq.b   #2,8*6(a0)           ;7. Wait

 addq.b   #2,8*7(a0)           ;8. Wait

 addq.b   #2,8*8(a0)           ;9. Wait

 addq.b   #2,8*9(a0)           ;10. Wait

 rts


SetzeRichtungRauf:

 move.b   #$FF,Richtung        ;Konstante $FF in "Richtung" kopieren

 rts



; Unsere eigene COPPERLIST definieren

;-------------------------------------

 SECTION Grafik,CODE_C

Copperliste:

            dc.w $100,$200     ;BPLCON0 -> Bitplanes abschalten

            dc.w $180,$000     ;COLOR0  -> Schwarz

Wait_o:

            dc.w $2C07,$FFFE   ;WAIT    -> Auf Zeile 44 warten

            dc.w $180,$300     ;COLOR0  -> Anfangsrot

            dc.w $2E07,$FFFE   ;WAIT    -> auf Zeile 46 warten

            dc.w $180,$600     ;COLOR0  -> ...

            dc.w $3007,$FFFE   ;WAIT    -> auf Zeile 48 warten

            dc.w $180,$900     ;COLOR0  -> ...

            dc.w $3207,$FFFE   ;WAIT    -> auf Zeile 50 warten

            dc.w $180,$C00     ;COLOR0  -> ...

            dc.w $3407,$FFFE   ;WAIT    -> auf Zeile 52 warten

            dc.w $180,$F00     ;COLOR0  -> ...

            dc.w $3607,$FFFE   ;WAIT    -> auf Zeile 54 warten

            dc.w $180,$C00     ;COLOR0  -> ...

            dc.w $3807,$FFFE   ;WAIT    -> auf Zeile 56 warten

            dc.w $180,$900     ;COLOR0  -> ...

            dc.w $3A07,$FFFE   ;WAIT    -> auf Zeile 58 warten

            dc.w $180,$600     ;COLOR0  -> Endrot

            dc.w $3C07,$FFFE   ;WAIT    -> auf Zeile 60 warten

            dc.w $180,$300     ;COLOR0  -> Endrot

Wait_u:

            dc.w $3E07,$FFFE   ;WAIT    -> auf Zeile 62 warten

            dc.w $180,$000     ;COLOR0  -> Scwarz

            dc.w $FFFF,$FFFE   ;ENDE DER COPPERLIST



 END




@{jcenter}


@{" Zurück zum Text " link akurs}


@endnode

@node list4 " Listings 4 "#
@tco main
@{lindent 1}


;Datei       : listing4.asm

;Beschreibung: Horizontale Copperanimation.

;Autor       : Enrico Bauermeister

;Datum       : 14.10.1997

;Assembler   : TFA AsmOne v1.29

;==========================================



; graphics.library öffnen

;------------------------

 lea      gfxname(pc),a1       ;Name der Library

 moveq    #0,d0                ;Version der Library

 move.l   4.w,a6               ;Basisadresse der exec.library

 jsr      -552(a6)             ;OpenLibrary()

 tst.l    d0                   ;Lib geöffnet ?

 beq      ende                 ;nein -> ende

 lea      _GfxBase(pc),a0      ;Basisadresse der graphics.library

 move.l   d0,(a0)              ;in _GfxBase sichern



; Interrupts verbieten (Mulitasking abschalten)

;-----------------------------------------------

 jsr      -120(a6)             ;Disable() - Wir schalten hier das

                               ;Multitasking ab. Unser Programm hat

                               ;nun den ganzen Amiga für sich alleine.



; alte Copperliste speichern

;---------------------------

 move.l   _GfxBase(pc),a6

 move.l   $26(a6),OldCop       ;Auf Adresse $26 zur Basisadresse

                               ;der graphics.library liegt die Adresse

                               ;der aktuellen Copperliste.



; unsere eigende Copperliste starten

;------------------------------------

 move.l   #Copperliste,$dff080 ;Im Register COP1LC steht nun die Adresse

                               ;unserer Copperliste.

 move.w   d0,$dff088           ;Wir starten unsere Copperliste indem wir

                               ;irgendeinen Wert ins Register COPJMP1

                               ;reinschreiben, z.B. D0.



; pruefen ob wir schon an Zeile 255 angekommen sind

;---------------------------------------------------

Pruefe:   

 cmpi.b   #$ff,$dff006         ;cmpi - compare immediate -

                               ;Inhahlt von Register VHPOSR ($dff006)

                               ;mit der Konstante $ff (255) vergleichen.

 bne.s    Pruefe               ;Vergleich nicht wahr -> Pruefe



; Das graue Stueck vom roten Balken bewegen

;-------------------------------------------

 bsr.s    BewegeRot            ;jede 1/50 Sekunde ausführen



; Das graue Stueck vom gruenen Balken bewegen

;---------------------------------------------

 bsr.w    BewegeGruen          ;jede 1/50 Sekunde ausführen

                     

; pruefen on wir noch auf Zeile 255 sind, und auf Zeile 0 warten

;----------------------------------------------------------------

Warte:

 cmpi.b   #$ff,$dff006         ;255 in VHPOSR ?

 beq.s    Warte                ;nein -> Warte



; linke Maustaste gedrueckt ?

;-----------------------------

 btst     #6,$bfe001           ;btst - test bit -

                               ;Testen ob Bit 6 im Register PRA ($bfe001)

                               ;gesetzt (also 1) ist.

 bne.s    Pruefe               ;nein -> Pruefe



; alte COPPERLIST wieder starten

;--------------------------------

 move.l  OldCop(pc),$dff080    ;In Register COP1LC steht nun wieder die

                               ;Adresse der alten Copperliste

 move.w  d0,$dff088            ;In COPJMP1 irgendeinen Wert -> alte

                               ;Copperliste starten



 move.l  4.w,a6                ;Basisadresse der exec.library

 jsr     -126(a6)              ;Enable() - So, nun können wieder mehrere

                               ;Programme den Amigs nutzen.



; Interrupts wieder zulassen (Multitasking einschalten)

;------------------------------------------------------

 move.l  4.w,a6                ;Basisadresse der exec.library

 jsr     -126(a6)              ;Enable() - So, nun können wieder mehrere

                               ;Programme den Amigs nutzen.



; graphics.library wieder schliessen

;------------------------------------

 move.l   _GfxBase(pc),a1      ;Basisadresse der graphics.library

 jsr      -414(a6)             ;CloseLibrary()



; Programm verlassen

;--------------------

ende

 moveq    #0,d0                ;Rückgabewert des Programmes

 rts                           ;und tschüß ...



; Datenbereich

;--------------

          cnop  0,2

gfxname:  dc.b  'graphics.library',0

_GfxBase: dc.l  0

OldCop:   dc.l  0  

Links_r:  dc.w  0

Rechts_r: dc.w  0

Links_g:  dc.w  0

Rechts_g: dc.w  0



;Routine um das graue Stueck vom roten Balken zu bewegen

;--------------------------------------------------------

BewegeRot:

 cmpi.w   #78,Rechts_r         ;Schon 78 Zyklen (1/50 Sekunde) nach rechts

                               ;bewegt ?

 bne.s    NachRechts_r         ;nein -> NachRechts_r

 cmpi.w   #78,Links_r          ;Schon 78 Zyklen (1/50 Sekunde) nach links

                               ;bewegt ?

 bne.s    NachLinks_r          ;nein -> NachLinks_r

 clr.w    Rechts_r             ;"Rechts_r" auf 0 setzen

 clr.w    Links_r              ;"Links_r" auf 0 setzen

 rts

NachRechts_r:

 lea      Wait_rot+1,a0        ;1 zur effektiven Adresse von Wait_rot

                               ;addieren und nach A0 laden (ohne eine 1

                               ;zu addieren würden wir die X-Position

                               ;nach A0 laden, wir wollen aber die Y-Pos.)

 move.w   #17,d0               ;17 nach D0 kopieren (Zähler für Schleife)

loop_rot_rechts:

 addq.b   #2,(a0)              ;2 zum linken WAIT des grauen Stücks add.

 addq.b   #2,8(a0)             ;2 zum rechten WAIT des grauen Stücks add.

 add.w    #24,a0

 dbra     d0,loop_rot_rechts   ;Mit "dbra" können wir eine Zählschleife in

                               ;Assembler realisieren. Der Inhalt von D0

                               ;bei jedem Durchlauf runtergezählt. Ist -1

                               ;in D0 wird die Schleife beendet. Hier geht

                               ;die Schleife von "loop_rot_rechts" bis zum

                               ;"dbra"-Befehl und wir 18 mal durchlaufen.

                               ;18 mal deshalb, weil der rote Balken 18

                               ;Zeilen hoch ist und wir die WAITs in jeder

                               ;Zeile bewegen müssen.

 add.w    #1,Rechts_r          ;1 zu "Rechts_r" addieren

 rts

NachLinks_r:

 lea      Wait_rot+1,a0        ;Diese Routine funktioniert genauso wie

 move.w   #17,d0               ;beim nach rechts bewegen, nur eben ein

loop_rot_links:                ;"sub" statt ein "add" bei den WAITs.

 subq.b   #2,(a0)              ;                 |  |

 subq.b   #2,8(a0)             ;                 |  |

 add.w    #24,a0               ;                 |  |

 dbra     d0,loop_rot_links    ;                 \  /

 add.w    #1,Links_r           ;                  \/

 rts



;Routine um das graue Stueck vom roten Balken zu bewegen

;--------------------------------------------------------

BewegeGruen:

 cmpi.w   #78,Links_g          ;Diese Routine funktioniert genauso wie

 bne.s    NachLinks_g          ;die für den roten Balken.

 cmpi.w   #78,Rechts_g         ;                 |  |

 bne.s    NachRechts_g         ;                 |  |

 clr.w    Links_g              ;                 |  |

 clr.w    Rechts_g             ;                 |  |

 rts                           ;                 |  |

NachRechts_g:                  ;                 |  |

 lea      Wait_gruen+1,a0      ;                 |  |

 move.w   #17,d0               ;                 |  |

loop_gruen_rechts:             ;                 |  |

 addq.b   #2,(a0)              ;                 |  |

 addq.b   #2,8(a0)             ;                 |  |

 add.w    #24,a0               ;                 |  |

 dbra     d0,loop_gruen_rechts ;                 |  |

 add.w    #1,Rechts_g          ;                 |  |

 rts                           ;                 |  |

NachLinks_g:                   ;                 |  |

 lea      Wait_gruen+1,a0      ;                 |  |

 move.w   #17,d0               ;                 |  |

loop_gruen_links:              ;                 |  |

 subq.b   #2,(a0)              ;                 |  |

 subq.b   #2,8(a0)             ;                 |  |

 add.w    #24,a0               ;                 |  |

 dbra     d0,loop_gruen_links  ;                 \  /

 add.w    #1,Links_g           ;                  \/

 rts



; Unsere eigene COPPERLIST definieren

;-------------------------------------

; Jeder Balken ist 18 Pixel hoch. Zwischen jeden Balken ist ein Zischenraum

; von 50 Pixeln.

;--------------------------------------------------------------------------

; X-Koordinate von 59 ($3b) bis 223 ($df). Weil der COPPER beim Wait nur

; einen ungeraden Wert fuer XX zulaesst !!!

;--------------------------------------------------------------------------

 SECTION Grafik,CODE_C

Copperliste:

  dc.w    $100,$200     ;Nur Hintergrund

  dc.w    $180,$000     ;Color0 -> Schwarz

; roter Balken (von Zeile 95 bis Zeile 113)

;-------------------------------------------

;erste Zeile

  dc.w    $5f07,$fffe   ;Wait y -> 95

  dc.w    $180,$300

Wait_rot:

  dc.w    $5f3b,$fffe   ;Wait y = 95  x = 59

  dc.w    $180,$333

  dc.w    $5f45,$fffe   ;Wait y = 95  x = 69

  dc.w    $180,$300

;zweite Zeile

  dc.w    $6007,$fffe   ;Wait y -> 96

  dc.w    $180,$300

  dc.w    $603b,$fffe   ;Wait y = 96  x = 59

  dc.w    $180,$333

  dc.w    $6045,$fffe   ;Wait y = 96  x = 69

  dc.w    $180,$300

;dritte Zeile

  dc.w    $6107,$fffe   ;Wait y -> Zeile 97

  dc.w    $180,$600

  dc.w    $613b,$fffe   ;Wait y = 97  x = 59

  dc.w    $180,$666

  dc.w    $6145,$fffe   ;Wait y = 97  x = 69

  dc.w    $180,$600

;vierte Zeile

  dc.w    $6207,$fffe   ;Wait y -> Zeile 98

  dc.w    $180,$600

  dc.w    $623b,$fffe   ;Wait y = 98  x = 59

  dc.w    $180,$666

  dc.w    $6245,$fffe   ;Wait y = 98  x = 69

  dc.w    $180,$600

;fuenfte Zeile

  dc.w    $6307,$fffe   ;Wait y -> Zeile 99

  dc.w    $180,$900

  dc.w    $633b,$fffe   ;Wait y = 99  x = 59

  dc.w    $180,$999

  dc.w    $6345,$fffe   ;Wait y = 99  x = 69

  dc.w    $180,$900

;sechste Zeile

  dc.w    $6407,$fffe   ;Wait y -> Zeile 100

  dc.w    $180,$900

  dc.w    $643b,$fffe   ;Wait y = 100  x = 59

  dc.w    $180,$999

  dc.w    $6445,$fffe   ;Wait y = 100  x = 69

  dc.w    $180,$900

;siebente Zeile

  dc.w    $6507,$fffe   ;Wait y -> Zeile 101

  dc.w    $180,$c00

  dc.w    $653b,$fffe   ;Wait y = 101  x = 59

  dc.w    $180,$ccc

  dc.w    $6545,$fffe   ;Wait y = 101  x = 69

  dc.w    $180,$c00

;achte Zeile

