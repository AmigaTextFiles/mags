TEXT 5 64 "PROC message_test(imsg:PTR TO intuimessage,w:PTR TO window) OF painter"
TEXT 5 74 "   ->test automatique de l'interface"
TEXT 5 84 "  DEF x,y"
TEXT 5 94 "  IF (imsg.class=IDCMP_MOUSEBUTTONS) OR (imsg.code=SELECTUP) ->si on a cliqué alors:"
TEXT 5 104 "    x:=imsg.mousex"
TEXT 5 114 "    y:=imsg.mousey"
TEXT 5 124 "    IF (x>=self.x) AND (y>=self.y) AND (x<(self.x+self.xs)) AND (y<(self.y+self.ys))"
TEXT 5 134 "    ->et si en plus on a cliqué dans la fenêtre alors :"
TEXT 5 144 "      self.xm:=x-self.x*1000/self.xs    ->changement d'échelle"
TEXT 5 154 "      self.ym:=y-self.y*1000/self.ys"
TEXT 5 164 "      RETURN TRUE  -> retourne vrai => provoque message_action()"
TEXT 5 174 "    ENDIF"
TEXT 5 184 "  ENDIF"
TEXT 5 194 "ENDPROC FALSE      -> retourne faux => pas de message_action()"
TEXT 5 215 ""
