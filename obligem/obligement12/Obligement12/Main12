EVENT "Vérifier les résultats"
IF "score = total" GOTO "score 6"
IF "score = 5" GOTO "score 5"
IF "score = 4" GOTO "score 4"
IF "score = 3" GOTO "score 3"
IF "score = 2" GOTO "score 2"
IF "score = 1" GOTO "score 1"
IF "score = 0" GOTO "score 0"
END

