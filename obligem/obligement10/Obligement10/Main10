STYLE 0 3 4 3 6 1 1 8 1 1 13 0 2 0 1 0 4 4 7
TEXT 14 12 "   self.state:=etat          -> Transfert de l'état dans colortext.state"
TEXT 14 22 "   self.fontwidth:=(gfx.defaultfont.xsize)"
TEXT 14 32 "   self.text:=t              -> self designe l'objet lui-même (colotext)"
TEXT 14 42 "   self.screen:=LockPubScreen(NIL)  -> Vérouille cet écran"
TEXT 14 52 "-> Cherche la couleur demandée"
TEXT 14 62 "   self.color:=ObtainBestPenA(pass:=self.screen.viewport.colormap,r,g,b,NIL)"
TEXT 14 72 "-> Sinon, texte en noir (couleur 1)"
TEXT 14 82 "   IF self.color=0 THEN self.color:=1"
TEXT 14 92 "ENDPROC pass -> Rend une copie de screen.viewport.colormap"
TEXT 14 102 ""
TEXT 14 112 "PROC will_resize() OF colortext IS RESIZEX   -> retaillable dans le sens des X"
TEXT 14 122 ""
TEXT 14 132 "PROC min_size(ta:PTR TO textattr,fh) OF colortext -> taille minimum"
TEXT 14 142 "   self.len:=StrLen(self.text)*self.fontwidth"
TEXT 14 152 "ENDPROC self.len , fh  -> Rend la longueur du texte et sa hauteur"
TEXT 14 162 ""
TEXT 14 172 "->        Dessine le texte, en couleur"
TEXT 14 182 "->       /"
TEXT 14 192 "PROC render(ta:PTR TO textattr,x,y,xs,ys,w:PTR TO window) OF colortext"
TEXT 14 202 "   DEF st"
TEXT 14 212 "   Colour(self.color,0)"
TEXT 14 222 "   st:=self.state"
TEXT 14 232 "   SELECT st"
TEXT 14 242 "      CASE GAUCHE ; TextF(self.x,self.y+ta.ysize-2,self.text)"
