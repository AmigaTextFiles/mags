TEXT 14 191 "   ->     | | \\___ Couleur verte"
TEXT 14 201 "   ->     | \\_____ Couleur rouge"
TEXT 14 211 "   ->     \\_______ Texte"
TEXT 14 221 "   DEF gfx:PTR TO gfxbase    -> Notre graphics.base"
TEXT 14 231 "   DEF pass:PTR TO colormap  -> Passe notre colormap"
